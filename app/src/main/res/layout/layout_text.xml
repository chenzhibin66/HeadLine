<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <View
        android:id="@+id/partline"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/title"
        />
    <RelativeLayout
        android:gravity="center_vertical"
        android:id="@+id/about_root"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/about_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/about_name"
            android:layout_toRightOf="@id/about_img"
            android:layout_marginLeft="15dp"
            android:textSize="13sp"
            android:textColor="@color/black_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/spe_text"
            android:textColor="@color/red_content"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/simple_text"
            android:layout_toLeftOf="@id/spe_text"
            android:textColor="@color/gray_content"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
